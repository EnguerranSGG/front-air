---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '../styles/values.css';
import '../styles/air-stat.css';
import '../styles/news.css';
import '../styles/partners.css';
import '../styles/gouvernance.css';
import '../styles/structures.css';
import '../styles/job-offers.css';
import '../styles/timeline.css';
import '../styles/fle.css';
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>A.I.R.</title> 
  </head>
  <body>
    <Header />
    
    <!-- Animation de chargement -->
    <div id="page-loader" class="page-loader">
      <div class="loader-content">
        <div class="loader-logo">
          <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="30" cy="30" r="25" stroke="#4b2aa5" stroke-width="3" stroke-dasharray="157" stroke-dashoffset="157">
              <animate attributeName="stroke-dashoffset" dur="2s" values="157;0;157" repeatCount="indefinite"/>
            </circle>
            <text x="30" y="35" text-anchor="middle" fill="#4b2aa5" font-family="Arial, sans-serif" font-size="12" font-weight="bold">A.I.R</text>
          </svg>
        </div>
        <div class="loader-text">Chargement...</div>
      </div>
    </div>
    <main>
      <slot />
    </main>
    <Footer />

    <script>
      // Système de chargement global pour toutes les pages
      window.pageLoadPromises = window.pageLoadPromises || [];
      window.pageLoadStartTime = Date.now();
      
      // Fonction pour enregistrer une promesse de chargement (accessible globalement)
      window.registerPageLoad = function(promise) {
        window.pageLoadPromises.push(promise);
      };
      
      // Réinitialiser les promesses à chaque navigation (pour les pages Astro)
      window.addEventListener('beforeunload', function() {
        window.pageLoadPromises = [];
        window.pageLoadStartTime = Date.now();
      });
      
      // Gérer la navigation Astro (SPA)
      document.addEventListener('astro:page-load', function() {
        window.pageLoadPromises = [];
        window.pageLoadStartTime = Date.now();
        
        const loader = document.getElementById('page-loader');
        const main = document.querySelector('main');
        
        if (loader && main) {
          loader.style.display = 'flex';
          loader.classList.remove('loader-hidden');
          main.classList.add('page-loading');
          main.style.opacity = '0';
          main.style.transform = 'translateY(20px)';
        }
        
        // Masquer les indicateurs de chargement individuels lors de la navigation
        const individualLoaders = document.querySelectorAll('.values-loading, .stats-loading, .partners-loading, .news-loading, .presentation-loading, .hero-loading, .timeline-loading, .offers-loading, .structures-loading, .counselors-loading, .satisfaction-loading');
        individualLoaders.forEach(el => {
          if (el) el.style.display = 'none';
        });
        
        // Attendre que toutes les sections enregistrent leurs promesses
        setTimeout(async () => {
          const checkAllLoaded = setInterval(async () => {
            if (window.pageLoadPromises.length === 0) {
              const timeSinceLoad = Date.now() - (window.pageLoadStartTime || Date.now());
              if (timeSinceLoad > 2000) {
                clearInterval(checkAllLoaded);
                hidePageLoader();
                return;
              }
            }
            
            if (window.pageLoadPromises.length > 0) {
              const allSettled = await Promise.allSettled(window.pageLoadPromises);
              const allResolved = allSettled.every(result => result.status === 'fulfilled' || result.status === 'rejected');
              if (allResolved) {
                clearInterval(checkAllLoaded);
                hidePageLoader();
              }
            }
          }, 200);
          
          setTimeout(() => {
            clearInterval(checkAllLoaded);
            hidePageLoader();
          }, 10000);
        }, 1000);
      });
      
      // Fonction pour masquer le loader global une fois tout chargé
      async function hidePageLoader() {
        const loader = document.getElementById('page-loader');
        if (!loader) return;
        
        try {
          // Attendre que toutes les promesses de chargement soient résolues
          await Promise.allSettled(window.pageLoadPromises);
          
          // Petit délai pour une transition fluide
          await new Promise(resolve => setTimeout(resolve, 300));
          
          loader.classList.add('loader-hidden');
          setTimeout(() => {
            loader.style.display = 'none';
            // Afficher le contenu principal
            const main = document.querySelector('main');
            if (main) {
              main.style.opacity = '1';
              main.style.transform = 'translateY(0)';
            }
          }, 500);
        } catch (err) {
          console.error('Erreur lors du masquage du loader:', err);
          loader.classList.add('loader-hidden');
          setTimeout(() => {
            loader.style.display = 'none';
          }, 500);
        }
      }
      
      // Animation de chargement de page
      document.addEventListener('DOMContentLoaded', function() {
        const loader = document.getElementById('page-loader');
        const main = document.querySelector('main');
        
        // Marquer le main comme étant en chargement pour toutes les pages
        if (main) {
          main.classList.add('page-loading');
          main.style.opacity = '0';
          main.style.transform = 'translateY(20px)';
        }
        
        // Masquer les indicateurs de chargement individuels
        const individualLoaders = document.querySelectorAll('.values-loading, .stats-loading, .partners-loading, .news-loading, .presentation-loading, .hero-loading, .timeline-loading, .offers-loading, .structures-loading, .counselors-loading, .satisfaction-loading');
        individualLoaders.forEach(el => {
          if (el) el.style.display = 'none';
        });
        
        // Attendre que toutes les sections enregistrent leurs promesses
        setTimeout(async () => {
          // Vérifier périodiquement si toutes les promesses sont résolues
          const checkAllLoaded = setInterval(async () => {
            // Si aucune promesse n'a été enregistrée après 2 secondes, masquer le loader
            if (window.pageLoadPromises.length === 0) {
              const timeSinceLoad = Date.now() - (window.pageLoadStartTime || Date.now());
              if (timeSinceLoad > 2000) {
                clearInterval(checkAllLoaded);
                hidePageLoader();
                return;
              }
            }
            
            if (window.pageLoadPromises.length > 0) {
              const allSettled = await Promise.allSettled(window.pageLoadPromises);
              const allResolved = allSettled.every(result => result.status === 'fulfilled' || result.status === 'rejected');
              if (allResolved) {
                clearInterval(checkAllLoaded);
                hidePageLoader();
              }
            }
          }, 200);
          
          // Timeout de sécurité : masquer le loader après 10 secondes max
          setTimeout(() => {
            clearInterval(checkAllLoaded);
            hidePageLoader();
          }, 10000);
        }, 1000); // Attendre 1 seconde pour que toutes les sections s'enregistrent
      });

      // Animation lors de la navigation (pour les liens internes)
      document.addEventListener('click', function(e) {
        const link = e.target.closest('a');
        if (link && link.href && link.href.includes(window.location.origin) && !link.href.includes('#')) {
          const loader = document.getElementById('page-loader');
          loader.style.display = 'flex';
          loader.classList.remove('loader-hidden');
          
          // Masquer le loader après la navigation
          setTimeout(() => {
            loader.classList.add('loader-hidden');
            setTimeout(() => {
              loader.style.display = 'none';
            }, 500);
          }, 600);
        }
      });
    </script>
  </body>
</html>

<style>
  .page-loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    opacity: 1;
    transition: opacity 0.5s ease-out;
    pointer-events: all;
  }

  /* S'assurer que le header reste au-dessus du loader */
  header,
  .header {
    position: relative;
    z-index: 10000;
  }
  
  /* Masquer le contenu principal sur la page d'accueil jusqu'à ce que tout soit chargé */
  main {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .loader-hidden {
    opacity: 0;
  }

  .loader-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .loader-logo {
    animation: pulse 2s ease-in-out infinite;
  }

  .loader-text {
    color: #4b2aa5;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    animation: fadeInOut 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes fadeInOut {
    0%, 100% {
      opacity: 0.6;
    }
    50% {
      opacity: 1;
    }
  }

  /* Animation d'entrée pour le contenu principal (quand le loader est masqué) */
  main:not(.page-loading) {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .loader-logo svg {
      width: 50px;
      height: 50px;
    }
    
    .loader-text {
      font-size: 0.9rem;
    }
  }
</style>
