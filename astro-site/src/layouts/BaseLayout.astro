---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '../styles/values.css';
import '../styles/air-stat.css';
import '../styles/news.css';
import '../styles/partners.css';
import '../styles/gouvernance.css';
import '../styles/structures.css';
import '../styles/job-offers.css';
import '../styles/timeline.css';
import '../styles/fle.css';
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>A.I.R.</title>
  </head>
  <body>
    <Header />
    
    <!-- Animation de chargement -->
    <div id="page-loader" class="page-loader">
      <div class="loader-content">
        <div class="loader-logo">
          <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="30" cy="30" r="25" stroke="#4b2aa5" stroke-width="3" stroke-dasharray="157" stroke-dashoffset="157">
              <animate attributeName="stroke-dashoffset" dur="2s" values="157;0;157" repeatCount="indefinite"/>
            </circle>
            <text x="30" y="35" text-anchor="middle" fill="#4b2aa5" font-family="Arial, sans-serif" font-size="12" font-weight="bold">A.I.R</text>
          </svg>
        </div>
        <div class="loader-text">Chargement...</div>
      </div>
    </div>
    <main class="page-loading" style="opacity: 0; visibility: hidden; pointer-events: none;">
      <slot />
    </main>
    <Footer />

    <script>
      // Système de chargement global pour toutes les pages
      window.pageLoadPromises = window.pageLoadPromises || [];
      window.pageLoadStartTime = Date.now();
      
      // Fonction pour enregistrer une promesse de chargement (accessible globalement)
      window.registerPageLoad = function(promise) {
        if (!window.pageLoadPromises) {
          window.pageLoadPromises = [];
        }
        window.pageLoadPromises.push(promise);
        // Déclencher une vérification si on était en attente
        if (window.pageLoadCheckInterval) {
          // La vérification continue déjà, pas besoin de faire quoi que ce soit
        }
      };
      
      // Flag pour indiquer que tous les scripts ont été exécutés
      window.allScriptsLoaded = false;
      
      // Réinitialiser les promesses à chaque navigation (pour les pages Astro)
      window.addEventListener('beforeunload', function() {
        window.pageLoadPromises = [];
        window.pageLoadStartTime = Date.now();
      });
      
      // Gérer la navigation Astro (SPA)
      document.addEventListener('astro:page-load', function() {
        window.pageLoadPromises = [];
        window.pageLoadStartTime = Date.now();
        window.allScriptsLoaded = false;
        
        const loader = document.getElementById('page-loader');
        const main = document.querySelector('main');
        
        if (loader && main) {
          loader.style.display = 'flex';
          loader.classList.remove('loader-hidden');
          main.classList.add('page-loading');
          main.style.opacity = '0';
          main.style.transform = 'translateY(20px)';
          
          // Masquer seulement le footer pendant le chargement (le header reste visible)
          const footer = document.querySelector('footer, .footer');
          if (footer) {
            footer.classList.add('page-loading');
            footer.style.opacity = '0';
            footer.style.visibility = 'hidden';
            footer.style.pointerEvents = 'none';
          }
        }
        
        // Masquer les indicateurs de chargement individuels lors de la navigation
        const individualLoaders = document.querySelectorAll('.values-loading, .stats-loading, .partners-loading, .news-loading, .presentation-loading, .hero-loading, .timeline-loading, .offers-loading, .structures-loading, .counselors-loading, .satisfaction-loading');
        individualLoaders.forEach(el => {
          if (el) el.style.display = 'none';
        });
        
        // Attendre que tous les scripts soient chargés et exécutés
        requestAnimationFrame(() => {
          requestAnimationFrame(() => {
            setTimeout(() => {
              window.allScriptsLoaded = true;
              
              // Attendre que le nombre de promesses se stabilise
              let initialCheckCount = 0;
              const waitForAllPromises = setInterval(() => {
                initialCheckCount++;
                
                // Si on a déjà attendu 3 secondes
                if (initialCheckCount > 10) { // 10 * 300ms = 3 secondes
                  clearInterval(waitForAllPromises);
                  startCheckingPromisesForNavigation();
                } else if (initialCheckCount > 5) {
                  // Après 1.5 secondes, vérifier si le nombre est stable
                  const stableCheck = window.pageLoadPromises.length;
                  setTimeout(() => {
                    if (window.pageLoadPromises.length === stableCheck && stableCheck > 0) {
                      clearInterval(waitForAllPromises);
                      startCheckingPromisesForNavigation();
                    }
                  }, 500);
                }
              }, 300);
              
              function startCheckingPromisesForNavigation() {
                // Si aucune promesse n'a été enregistrée, c'est probablement une page statique
                if (window.pageLoadPromises.length === 0) {
                  setTimeout(() => {
                    hidePageLoader();
                  }, 500);
                  return;
                }
                
                console.log(`[Page Loader Navigation] Début de la vérification avec ${window.pageLoadPromises.length} promesse(s)`);
                
                let lastPromiseCount = window.pageLoadPromises.length;
                let stableCount = 0;
                let consecutiveStableChecks = 0;
                
                const checkAllLoaded = setInterval(async () => {
                  const promises = [...window.pageLoadPromises];
                  
                  if (promises.length !== lastPromiseCount) {
                    console.log(`[Page Loader Navigation] Nouvelle(s) promesse(s): ${promises.length} (était ${lastPromiseCount})`);
                    lastPromiseCount = promises.length;
                    stableCount = 0;
                    consecutiveStableChecks = 0;
                    return;
                  }
                  
                  stableCount++;
                  
                  if (stableCount < 5) {
                    return;
                  }
                  
                  if (promises.length > 0) {
                    const allSettled = await Promise.allSettled(promises);
                    const allResolved = allSettled.every(result => result.status === 'fulfilled' || result.status === 'rejected');
                    
                    if (!allResolved) {
                      consecutiveStableChecks = 0;
                      return;
                    }
                    
                    consecutiveStableChecks++;
                    console.log(`[Page Loader Navigation] Toutes les promesses résolues (vérification ${consecutiveStableChecks}/3)`);
                    
                    if (consecutiveStableChecks >= 3) {
                      await new Promise(resolve => setTimeout(resolve, 500));
                      
                      if (window.pageLoadPromises.length === promises.length) {
                        console.log(`[Page Loader Navigation] ✅ Toutes les promesses résolues`);
                        clearInterval(checkAllLoaded);
                        hidePageLoader();
                      } else {
                        console.log(`[Page Loader Navigation] ⚠️ Nouvelles promesses ajoutées, réinitialisation`);
                        lastPromiseCount = window.pageLoadPromises.length;
                        stableCount = 0;
                        consecutiveStableChecks = 0;
                      }
                    }
                  }
                }, 300);
                
                setTimeout(() => {
                  console.log(`[Page Loader Navigation] ⏱️ Timeout de sécurité atteint`);
                  clearInterval(checkAllLoaded);
                  hidePageLoader();
                }, 15000);
              }
            }, 2000);
          });
        });
      });
      
      // Fonction pour masquer le loader global une fois tout chargé
      async function hidePageLoader() {
        const loader = document.getElementById('page-loader');
        if (!loader) return;
        
        // Éviter les appels multiples
        if (loader.classList.contains('loader-hidden')) {
          return;
        }
        
        try {
          // Attendre que toutes les promesses de chargement soient résolues
          if (window.pageLoadPromises && window.pageLoadPromises.length > 0) {
            await Promise.allSettled(window.pageLoadPromises);
          }
          
          // Petit délai pour une transition fluide
          await new Promise(resolve => setTimeout(resolve, 300));
          
          loader.classList.add('loader-hidden');
        setTimeout(() => {
            loader.style.display = 'none';
            // Afficher le contenu principal et le footer
            const main = document.querySelector('main');
            const footer = document.querySelector('footer, .footer');
            
            if (main) {
              main.classList.remove('page-loading');
              // Retirer les styles inline pour laisser le CSS prendre le relais
              main.style.opacity = '';
              main.style.visibility = '';
              main.style.pointerEvents = '';
              main.style.transform = 'translateY(0)';
            }
            if (footer) {
              footer.classList.remove('page-loading');
              footer.style.opacity = '';
              footer.style.visibility = '';
              footer.style.pointerEvents = '';
            }
          }, 500);
        } catch (err) {
          console.error('Erreur lors du masquage du loader:', err);
          loader.classList.add('loader-hidden');
          setTimeout(() => {
            loader.style.display = 'none';
            const main = document.querySelector('main');
            const footer = document.querySelector('footer, .footer');
            
            if (main) {
              main.classList.remove('page-loading');
              // Retirer les styles inline pour laisser le CSS prendre le relais
              main.style.opacity = '';
              main.style.visibility = '';
              main.style.pointerEvents = '';
              main.style.transform = 'translateY(0)';
            }
            if (footer) {
              footer.classList.remove('page-loading');
              footer.style.opacity = '';
              footer.style.visibility = '';
              footer.style.pointerEvents = '';
            }
          }, 500);
        }
      }
      
      // Animation de chargement de page
      document.addEventListener('DOMContentLoaded', function() {
        // Réinitialiser les promesses au chargement de la page
        window.pageLoadPromises = [];
        window.pageLoadStartTime = Date.now();
        window.allScriptsLoaded = false;
        
        const loader = document.getElementById('page-loader');
        const main = document.querySelector('main');
        
        // Marquer le main et footer comme étant en chargement pour toutes les pages
        if (main) {
          main.classList.add('page-loading');
          main.style.opacity = '0';
          main.style.visibility = 'hidden';
          main.style.transform = 'translateY(20px)';
          main.style.pointerEvents = 'none';
        }
        
        // Masquer le footer pendant le chargement (le header reste visible)
        const footer = document.querySelector('footer, .footer');
        if (footer) {
          footer.classList.add('page-loading');
          footer.style.opacity = '0';
          footer.style.visibility = 'hidden';
          footer.style.pointerEvents = 'none';
        }
        
        // Masquer les indicateurs de chargement individuels
        const individualLoaders = document.querySelectorAll('.values-loading, .stats-loading, .partners-loading, .news-loading, .presentation-loading, .hero-loading, .timeline-loading, .offers-loading, .structures-loading, .counselors-loading, .satisfaction-loading');
        individualLoaders.forEach(el => {
          if (el) el.style.display = 'none';
        });
        
        // Attendre que tous les scripts soient chargés et exécutés
        // Utiliser plusieurs requestAnimationFrame pour s'assurer que le DOM est prêt
        requestAnimationFrame(() => {
          requestAnimationFrame(() => {
            // Attendre encore un peu pour que tous les scripts avec define:vars soient exécutés
            setTimeout(() => {
              window.allScriptsLoaded = true;
              console.log(`[Page Loader] Scripts chargés, ${window.pageLoadPromises?.length || 0} promesse(s) enregistrée(s)`);
              
              // Attendre encore un peu pour laisser le temps aux scripts de s'enregistrer
              // Puis attendre que le nombre de promesses se stabilise
              let initialCheckCount = 0;
              const waitForAllPromises = setInterval(() => {
                initialCheckCount++;
                const currentCount = window.pageLoadPromises.length;
                console.log(`[Page Loader] Attente initiale (${initialCheckCount}/10): ${currentCount} promesse(s) détectée(s)`);
                
                // Si on a déjà attendu 3 secondes et qu'aucune promesse n'a été ajoutée récemment
                if (initialCheckCount > 10) { // 10 * 300ms = 3 secondes
                  console.log(`[Page Loader] Timeout initial atteint, démarrage de la vérification avec ${currentCount} promesse(s)`);
                  clearInterval(waitForAllPromises);
                  startCheckingPromises();
                } else if (initialCheckCount > 5) {
                  // Après 1.5 secondes, vérifier si le nombre est stable
                  const stableCheck = window.pageLoadPromises.length;
                  setTimeout(() => {
                    if (window.pageLoadPromises.length === stableCheck && stableCheck > 0) {
                      console.log(`[Page Loader] Nombre de promesses stable (${stableCheck}), démarrage de la vérification`);
                      clearInterval(waitForAllPromises);
                      startCheckingPromises();
                    }
                  }, 500);
                }
              }, 300);
              
              function startCheckingPromises() {
                // Si aucune promesse n'a été enregistrée, c'est probablement une page statique
                if (window.pageLoadPromises.length === 0) {
                  setTimeout(() => {
                    hidePageLoader();
                  }, 500);
                  return;
                }
                
                console.log(`[Page Loader] Début de la vérification avec ${window.pageLoadPromises.length} promesse(s) enregistrée(s)`);
                
                // Stocker le nombre initial de promesses
                let lastPromiseCount = window.pageLoadPromises.length;
                let stableCount = 0;
                let consecutiveStableChecks = 0;
                let checkCount = 0;
                
                // Vérifier périodiquement si toutes les promesses sont résolues
                const checkAllLoaded = setInterval(async () => {
                  checkCount++;
                  
                  // Faire une copie de la liste pour éviter les modifications pendant la vérification
                  const promises = [...window.pageLoadPromises];
                  
                  // Vérifier si de nouvelles promesses ont été ajoutées
                  if (promises.length !== lastPromiseCount) {
                    console.log(`[Page Loader] Nouvelle(s) promesse(s) détectée(s): ${promises.length} (était ${lastPromiseCount})`);
                    lastPromiseCount = promises.length;
                    stableCount = 0;
                    consecutiveStableChecks = 0;
                    return; // Attendre que le nombre se stabilise
                  }
                  
                  // Log périodique pour voir l'état des promesses
                  if (checkCount % 10 === 0) {
                    console.log(`[Page Loader] Vérification ${checkCount}: ${promises.length} promesse(s) en cours de vérification`);
                  }
                  
                  stableCount++;
                  
                  // Attendre que le nombre de promesses soit stable pendant au moins 5 vérifications (1.5s)
                  if (stableCount < 5) {
                    return;
                  }
                  
                  if (promises.length > 0) {
                    // Utiliser Promise.allSettled qui attend que TOUTES les promesses soient résolues
                    const allSettled = await Promise.allSettled(promises);
                    const allResolved = allSettled.every(result => result.status === 'fulfilled' || result.status === 'rejected');
                    
                    if (!allResolved) {
                      const pendingResults = allSettled.filter(r => r.status === 'pending');
                      console.log(`[Page Loader] Vérification ${checkCount}: ${pendingResults.length} promesse(s) encore en attente sur ${promises.length}`);
                      consecutiveStableChecks = 0;
                      return;
                    }
                    
                    consecutiveStableChecks++;
                    console.log(`[Page Loader] Toutes les promesses résolues (vérification ${consecutiveStableChecks}/3)`);
                    
                    // Attendre 3 vérifications consécutives avec toutes les promesses résolues
                    if (consecutiveStableChecks >= 3) {
                      // Attendre un peu plus pour s'assurer qu'aucune nouvelle promesse n'est enregistrée
                      await new Promise(resolve => setTimeout(resolve, 500));
                      
                      // Vérifier une dernière fois si de nouvelles promesses ont été ajoutées
                      if (window.pageLoadPromises.length === promises.length) {
                        console.log(`[Page Loader] ✅ Toutes les ${promises.length} promesses sont résolues, masquage du loader`);
                        clearInterval(checkAllLoaded);
                        hidePageLoader();
                      } else {
                        // Nouvelles promesses ajoutées, réinitialiser
                        console.log(`[Page Loader] ⚠️ Nouvelles promesses ajoutées (${window.pageLoadPromises.length} au lieu de ${promises.length}), réinitialisation`);
                        lastPromiseCount = window.pageLoadPromises.length;
                        stableCount = 0;
                        consecutiveStableChecks = 0;
                      }
                    }
                  }
                }, 300);
                
                // Timeout de sécurité : masquer le loader après 15 secondes max
                setTimeout(() => {
                  console.log(`[Page Loader] ⏱️ Timeout de sécurité atteint, masquage du loader`);
                  clearInterval(checkAllLoaded);
                  hidePageLoader();
                }, 15000);
              }
            }, 2000); // Augmenter le délai initial à 2 secondes
          });
        });
      });

      // Animation lors de la navigation (pour les liens internes)
      document.addEventListener('click', function(e) {
        const link = e.target.closest('a');
        if (link && link.href && link.href.includes(window.location.origin) && !link.href.includes('#')) {
          const loader = document.getElementById('page-loader');
          loader.style.display = 'flex';
          loader.classList.remove('loader-hidden');
          
          // Masquer le loader après la navigation
          setTimeout(() => {
            loader.classList.add('loader-hidden');
            setTimeout(() => {
              loader.style.display = 'none';
            }, 500);
          }, 600);
        }
      });
    </script>
  </body>
</html>

<style>
  .page-loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9998;
    opacity: 1;
    transition: opacity 0.5s ease-out;
    pointer-events: all;
  }

  /* S'assurer que le header reste au-dessus du loader */
  header,
  .header {
    position: relative;
    z-index: 10000;
    transition: opacity 0.5s ease-out;
    opacity: 1 !important; /* Forcer la visibilité du header */
  }
  
  footer,
  .footer {
    transition: opacity 0.5s ease-out, visibility 0.5s ease-out;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }
  
  footer:not(.page-loading),
  .footer:not(.page-loading) {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }
  
  /* Masquer le contenu principal jusqu'à ce que tout soit chargé */
  main.page-loading {
    opacity: 0 !important;
    visibility: hidden !important;
    transform: translateY(20px);
    transition: opacity 0.5s ease-out, visibility 0.5s ease-out, transform 0.5s ease-out;
    pointer-events: none;
  }
  
  main:not(.page-loading) {
    opacity: 1 !important;
    visibility: visible !important;
    pointer-events: auto;
  }

  .loader-hidden {
    opacity: 0;
  }

  .loader-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .loader-logo {
    animation: pulse 2s ease-in-out infinite;
  }

  .loader-text {
    color: #4b2aa5;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    animation: fadeInOut 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes fadeInOut {
    0%, 100% {
      opacity: 0.6;
    }
    50% {
      opacity: 1;
    }
  }

  /* Animation d'entrée pour le contenu principal (quand le loader est masqué) */
  /* Déjà défini plus haut avec !important */

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .loader-logo svg {
      width: 50px;
      height: 50px;
    }
    
    .loader-text {
      font-size: 0.9rem;
    }
  }
</style>
