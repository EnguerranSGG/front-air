---
const navLinks = [
  { name: 'Structures', href: '/structures' },
  { name: 'Gouvernance', href: '/gouvernance' },
  { name: 'Historique', href: '/historique' },
  { name: 'Accompagnement', href: '/accompagnement' },
  { name: 'Formations', href: '/formations' }
];
---

<header class="header">
  <div class="container">
    <a href="/" class="logo-link">
      <img src="/assets/air-asso.png" alt="Logo A.I.R." class="logo" />
    </a>

    <nav class="desktop-menu">
      {navLinks.map((link) => (
        <a href={link.href} class="nav-link">{link.name}</a>
      ))}
    </nav>

    <div class="mobile-menu-icon" id="menu-icon">
      <span></span><span></span><span></span>
    </div>
  </div>

  <nav class="mobile-menu" id="mobile-menu">
    {navLinks.map((link) => (
      <a href={link.href}>{link.name}</a>
    ))}
  </nav>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const icon = document.querySelector('.mobile-menu-icon');
      const menu = document.querySelector('.mobile-menu');

      icon.addEventListener('click', () => {
        icon.classList.toggle('open');
        menu.classList.toggle('open');
      });

      menu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          icon.classList.remove('open');
          menu.classList.remove('open');
        });
      });
    });
  </script>
</header>
