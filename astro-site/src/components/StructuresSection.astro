---
import StructureCard from '../components/StructureCard.astro';

const API_BASE_URL = import.meta.env.PUBLIC_API_URL || '';
const structureTypes = [
  'Boutique solidaire',
  'Pôle formation', 
  'Pôle asile',
  'Pôle intégration'
];
---

<section class="structures-section">
  <h2 class="structures-title" style="opacity: 0; visibility: hidden;">Nos différentes structures</h2>
  <div id="structures-container">
    <div class="structures-loading">Chargement des structures...</div>
  </div>
</section>

<script define:vars={{ API_BASE_URL, structureTypes: JSON.stringify(structureTypes) }}>
  // Créer la promesse immédiatement et l'enregistrer de manière synchrone
  const container = document.getElementById('structures-container');
  
  // Créer la promesse de chargement immédiatement (sans IIFE async)
  const loadPromise = (async () => {
    if (!container || !API_BASE_URL) {
      if (container) {
        container.innerHTML = '<p>Configuration API manquante</p>';
      }
      return;
    }

    try {
      // Utiliser la nouvelle route optimisée qui ne charge pas les missions
      const res = await fetch(`${API_BASE_URL}/structures/all/public`);
      if (!res.ok) {
        throw new Error(`Erreur HTTP: ${res.status}`);
      }
      
      const allStructures = await res.json();
      if (!Array.isArray(allStructures)) {
        throw new Error('Réponse invalide du serveur');
      }

      // Filtrer et grouper les structures par type
      const types = JSON.parse(structureTypes);
      const structuresByType = {};
      
      allStructures
        .filter(s => s.structure_id !== 1) // Exclure la structure ID 1
        .forEach(structure => {
          const typeName = structure.structure_type?.name;
          if (typeName && types.includes(typeName)) {
            if (!structuresByType[typeName]) {
              structuresByType[typeName] = [];
            }
            structuresByType[typeName].push(structure);
          }
        });

      // Trier les structures par ID dans chaque type
      Object.keys(structuresByType).forEach(typeName => {
        structuresByType[typeName].sort((a, b) => a.structure_id - b.structure_id);
      });

      if (Object.keys(structuresByType).length === 0) {
        container.innerHTML = '<p>Aucune structure disponible pour le moment.</p>';
        return;
      }

      // Stocker les données dans un objet JavaScript plutôt que dans des attributs HTML
      const structuresDataMap = new Map();
      let structureIndex = 0;

      container.innerHTML = Object.entries(structuresByType).map(([typeName, structures]) => `
        <div class="structure-type-group">
          <h3 class="structure-type-title">${typeName}</h3>
          <div class="structures-grid">
            ${structures.map(s => {
              const index = structureIndex++;
              structuresDataMap.set(index, s);
              return `<div class="structure-card" data-structure-index="${index}" data-animate="true"></div>`;
            }).join('')}
          </div>
        </div>
      `).join('');

      // Charger dynamiquement les StructureCard pour chaque structure et attendre le chargement des images
      const imagePromises = [];
      
      container.querySelectorAll('.structure-card').forEach(card => {
        const index = parseInt(card.getAttribute('data-structure-index'));
        const structureData = structuresDataMap.get(index);
        
        if (!structureData) return;

        // Échapper les caractères spéciaux pour l'insertion HTML
        const escapeHtml = (text) => {
          if (!text) return '';
          const div = document.createElement('div');
          div.textContent = text;
          return div.innerHTML;
        };

        // Vérifier si la structure a des missions
        const hasMissions = structureData._count?.missions > 0;
        const structureId = structureData.structure_id;

        // Générer la structure HTML identique à StructureCard
        card.innerHTML = `
          ${structureData.file?.file_id ? `
            <div class="structure-image">
              <img src="${API_BASE_URL}/files/${structureData.file.file_id}/download" alt="${escapeHtml(structureData.name || '')}" />
            </div>
          ` : ''}
          <div class="structure-content">
            <h3 class="structure-title">${escapeHtml(structureData.name || 'Nom manquant')}</h3>
            <p class="structure-description">${escapeHtml(structureData.description || '')}</p>
            ${structureData.link ? `
              <p class="structure-link-container">
                <a href="${escapeHtml(structureData.link)}" target="_blank" rel="noopener noreferrer" class="structure-link">
                  <svg class="icon link-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  Lien vers la structure
                </a>
              </p>
            ` : ''}
            ${structureData.phone_number ? `
              <p class="structure-info">
                <svg class="icon phone-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                ${escapeHtml(structureData.phone_number)}
              </p>
            ` : ''}
            ${structureData.address ? `
              <p class="structure-info">
                <svg class="icon location-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                ${escapeHtml(structureData.address)}
              </p>
            ` : ''}
            ${hasMissions ? `
              <div class="missions-section" data-structure-id="${structureId}">
                <button class="missions-toggle-link" data-structure-id="${structureId}" type="button">
                  <span>Voir les missions</span>
                  <svg class="icon chevron" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
                <div class="missions-content" data-structure-id="${structureId}" style="display: none;">
                  <div class="missions-loading">Chargement des missions...</div>
                  <ul class="missions-list"></ul>
                </div>
              </div>
            ` : ''}
          </div>
        `;

        // Attendre le chargement de l'image si elle existe
        if (structureData.file?.file_id) {
          const img = card.querySelector('.structure-image img');
          if (img) {
            const imagePromise = new Promise((resolve, reject) => {
              if (img.complete && img.naturalHeight !== 0) {
                // Image déjà chargée
                resolve();
              } else {
                img.onload = () => resolve();
                img.onerror = () => resolve(); // Résoudre même en cas d'erreur pour ne pas bloquer
                // Timeout de sécurité (10 secondes)
                setTimeout(() => resolve(), 10000);
              }
            });
            imagePromises.push(imagePromise);
          }
        }

        // Ajouter l'événement pour charger les missions si nécessaire
        if (hasMissions) {
          const toggleBtn = card.querySelector(`.missions-toggle-link[data-structure-id="${structureId}"]`);
          const missionsContent = card.querySelector(`.missions-content[data-structure-id="${structureId}"]`);
          const missionsList = missionsContent?.querySelector('.missions-list');
          const missionsLoading = missionsContent?.querySelector('.missions-loading');
          let missionsLoaded = false;

          toggleBtn?.addEventListener('click', async () => {
            const isExpanded = missionsContent?.style.display !== 'none';
            const chevron = toggleBtn.querySelector('.chevron');
            
            if (isExpanded) {
              // Fermer
              missionsContent.style.display = 'none';
              if (chevron) {
                chevron.classList.remove('expanded');
              }
            } else {
              // Ouvrir
              missionsContent.style.display = 'block';
              if (chevron) {
                chevron.classList.add('expanded');
              }
              
              // Charger les missions si pas encore chargées
              if (!missionsLoaded && missionsList && missionsLoading) {
                try {
                  const missionsRes = await fetch(`${API_BASE_URL}/missions/structure/${structureId}/public`);
                  if (missionsRes.ok) {
                    const missions = await missionsRes.json();
                    if (Array.isArray(missions) && missions.length > 0) {
                      missionsList.innerHTML = missions.map(mission => 
                        `<li>${escapeHtml(mission.content || '')}</li>`
                      ).join('');
                      missionsLoading.style.display = 'none';
                      missionsList.style.display = 'block';
                    } else {
                      missionsLoading.textContent = 'Aucune mission disponible';
                    }
                  } else {
                    missionsLoading.textContent = 'Erreur lors du chargement des missions';
                  }
                  missionsLoaded = true;
                } catch (err) {
                  console.error('Erreur lors du chargement des missions:', err);
                  missionsLoading.textContent = 'Erreur lors du chargement des missions';
                }
              }
            }
          });
        }
      });

      // Attendre que toutes les images soient chargées avant de continuer
      await Promise.allSettled(imagePromises);

      // Forcer le reflow pour s'assurer que les styles sont appliqués
      container.offsetHeight;

      // Initialiser les animations
      initScrollAnimations();

      // Attendre un peu pour que les animations soient initialisées et que le DOM soit stable
      await new Promise(resolve => setTimeout(resolve, 100));

      // Afficher le titre maintenant que tout est chargé
      const title = document.querySelector('.structures-title');
      if (title) {
        title.style.opacity = '1';
        title.style.visibility = 'visible';
      }
    } catch (err) {
      console.error('Erreur lors du fetch des structures :', err);
      if (container) {
        container.innerHTML = '<p>Erreur lors du chargement des structures</p>';
      }
      // Afficher le titre même en cas d'erreur
      const title = document.querySelector('.structures-title');
      if (title) {
        title.style.opacity = '1';
        title.style.visibility = 'visible';
      }
    }
  })();
  
  // Enregistrer la promesse immédiatement pour le système de chargement global
  if (!window.pageLoadPromises) {
    window.pageLoadPromises = [];
  }
  window.pageLoadPromises.push(loadPromise);
  if (window.registerPageLoad) {
    window.registerPageLoad(loadPromise);
  }

  function initScrollAnimations() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const delay = Array.from(entry.target.parentElement?.children || []).indexOf(entry.target) * 150;
          setTimeout(() => {
            entry.target.classList.add('animate-in');
          }, delay);
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    const structureCards = document.querySelectorAll('.structure-card[data-animate="true"]');
    structureCards.forEach((card) => {
      observer.observe(card);
    });
  }
</script>

<style is:global>
  .structures-section {
    padding: 4rem 2rem;
    background: #f8f9fa;
  }

  .structures-section h2,
  .structures-section .structures-title {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
    color: #4b2aa5;
    transition: opacity 0.5s ease-out, visibility 0.5s ease-out;
  }

  .structures-loading {
    text-align: center;
    padding: 2rem;
    color: #666;
  }

  .structure-type-group {
    margin-bottom: 4rem;
  }

  .structure-type-group:last-child {
    margin-bottom: 0;
  }

  .structure-type-title {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
    color: #333;
    font-weight: 600;
    position: relative;
    padding-bottom: 0.5rem;
  }

  .structure-type-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, #4b2aa5, #0046a4);
    border-radius: 2px;
  }

  .structures-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .structure-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #e6ebf5;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
  }

  .structure-card.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  .structure-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .structure-image {
    flex-shrink: 0;
    width: 100%;
    height: 300px;
    overflow: hidden;
    border-radius: 12px 12px 0 0;
  }

  .structure-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .structure-card:hover .structure-image img {
    transform: scale(1.05);
  }

  .structure-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 1.5rem;
  }

  .structure-title {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
    font-weight: bold;
    color: #333;
  }

  .structure-description {
    margin: 0 0 1rem 0;
    color: #666;
    line-height: 1.5;
    flex: 1;
  }

  .structure-link-container {
    margin: 0 0 1rem 0;
  }

  .structure-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #0046a4;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .structure-link:hover {
    color: white;
  }

  .structure-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 0 0.5rem 0;
    color: #666;
    font-size: 0.9rem;
  }

  .icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }

  .link-icon {
    width: 1.2rem;
    height: 1.2rem;
  }

  .missions-section {
    margin-top: 1rem;
    border-top: 1px solid #ddd;
    padding-top: 1rem;
  }

  .missions-toggle-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: none;
    border: none;
    padding: 0;
    color: #4b2aa5;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    transition: color 0.3s ease, opacity 0.3s ease;
    font-family: inherit;
  }

  .missions-toggle-link:hover {
    color: #3a1f7a;
    opacity: 0.8;
  }

  .missions-toggle-link:active {
    opacity: 0.6;
  }

  .missions-toggle-link .chevron {
    width: 1rem;
    height: 1rem;
    transition: transform 0.3s ease;
    transform: rotate(0deg);
  }

  .missions-toggle-link .chevron.expanded {
    transform: rotate(180deg);
  }

  .missions-content {
    margin-top: 1rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
  }

  .missions-loading {
    text-align: center;
    color: #666;
    padding: 1rem;
  }

  .missions-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: none;
  }

  .missions-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid #e0e0e0;
    color: #333;
    line-height: 1.6;
  }

  .missions-list li:last-child {
    border-bottom: none;
  }

  .missions-list li::before {
    content: '✓';
    color: #4b2aa5;
    font-weight: bold;
    margin-right: 0.5rem;
  }

  @media (max-width: 768px) {
    .structures-section {
      padding: 2rem 1rem;
    }

    .structures-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .structure-type-group {
      margin-bottom: 3rem;
    }

    .structure-type-title {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .structures-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
