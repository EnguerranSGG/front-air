          <path d="M12 21c-.41 0-.75-.34-.75-.75V4c0-.41.34-.75.75-.75s.75.34.75.75v16.25c0 .41-.34.75-.75.75z"/>
          <path d="M19 21H5c-.41 0-.75-.34-.75-.75s.34-.75.75-.75h14c.41 0 .75.34.75.75s-.34.75-.75.75z"/>
        </svg>
        Certification
      </a>
      <a class="download-btn" href={`${ASSET_URL}/files/16/download`} download>
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.89 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm4 18H6V4h7v5h5v11z"/>
          <path d="M12 15.575c-.22 0-.42-.09-.58-.25l-3-3c-.32-.32-.32-.85 0-1.17c.32-.32.85-.32 1.17 0L12 13.575l2.41-2.42c.32-.32.85-.32 1.17 0c.32.32.32.85 0 1.17l-3 3c-.16.16-.36.25-.58.25z"/>
          <path d="M12 16c-.41 0-.75-.34-.75-.75v-6c0-.41.34-.75.75-.75s.75.34.75.75v6c0 .41-.34.75-.75.75z"/>
        </svg>
        Programme
      </a>
      <a class="social-btn" href="https://www.facebook.com/p/Accueil-Insertion-Rencontre-FLE-et-Code-de-la-route-100087107855012/" target="_blank" rel="noopener noreferrer">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
        Facebook FLE
      </a>
    </div>
  </div>
</section>

<div class="satisfaction-sections-container" id="satisfaction-container">
  <div class="satisfaction-loading">Chargement des sections...</div>
</div>

<script define:vars={{ API_BASE_URL, ASSET_URL }}>
  // Charger toutes les données FLE côté client
  (async function() {
    // Charger le titre principal
    try {
      const titleRes = await fetch(`${API_BASE_URL}/files/11/title`);
      if (titleRes.ok) {
        const title = await titleRes.text();
        const titleEl = document.getElementById('fle-main-title');
        if (titleEl) titleEl.textContent = title;
      }
    } catch (err) {
      console.error('Erreur fetch titre principal :', err);
    }

    // Charger les statistiques FLE
    const statsContainer = document.getElementById('fle-stats');
    try {
      const statsRes = await fetch(`${API_BASE_URL}/statistics/by-type-name/FLE`);
      const statsData = await statsRes.json();
      const stats = Array.isArray(statsData) ? statsData : [];
      
      if (stats.length > 0 && statsContainer) {
        statsContainer.innerHTML = stats.map((stat, index) => `
          <div class="stat-block animate-slide-up" style="animation-delay: ${0.8 + index * 0.2}s">
            <strong class="stat-value" data-target="${stat.value}">${stat.is_percentage ? '0%' : '0'}</strong>
            <p class="stat-label">${stat.label || ''}<br />en ${stat.year || ''}</p>
          </div>
        `).join('');
        
        initFleStatsAnimations();
      } else if (statsContainer) {
        statsContainer.innerHTML = '<p>Aucune statistique disponible</p>';
      }
    } catch (err) {
      console.error('Erreur fetch statistiques FLE :', err);
      if (statsContainer) statsContainer.innerHTML = '<p>Erreur lors du chargement des statistiques</p>';
    }

    // Charger les sections satisfaction
    const satisfactionContainer = document.getElementById('satisfaction-container');
    if (satisfactionContainer) {
      try {
        const [satTitle, code1Title, code2Title, fle1Title, fle2Title] = await Promise.all([
          fetch(`${API_BASE_URL}/files/26/title`).then(r => r.ok ? r.text() : ''),
          fetch(`${API_BASE_URL}/files/27/title`).then(r => r.ok ? r.text() : ''),
          fetch(`${API_BASE_URL}/files/28/title`).then(r => r.ok ? r.text() : ''),
          fetch(`${API_BASE_URL}/files/29/title`).then(r => r.ok ? r.text() : ''),
          fetch(`${API_BASE_URL}/files/30/title`).then(r => r.ok ? r.text() : '')
        ]);

        satisfactionContainer.innerHTML = `
          <section class="satisfaction-section">
            <h2 class="satisfaction-title">${satTitle || 'Satisfaction des stagiaires'}</h2>
            <div class="satisfaction-image-container">
              <img src="${ASSET_URL}/files/26/download" alt="Satisfaction des stagiaires" class="satisfaction-image" />
            </div>
          </section>
          <section class="satisfaction-section">
            <h2 class="satisfaction-title">Code de la route</h2>
            <div class="satisfaction-image-container double-image-row">
              <div class="image-title-block">
                <img src="${ASSET_URL}/files/27/download" alt="${code1Title || ''}" class="satisfaction-image double-image" />
                <h3 class="satisfaction-title" style="font-size: 1.3rem; margin-top: 1rem;">${code1Title || ''}</h3>
              </div>
              <div class="image-title-block">
                <img src="${ASSET_URL}/files/28/download" alt="${code2Title || ''}" class="satisfaction-image double-image" />
                <h3 class="satisfaction-title" style="font-size: 1.3rem; margin-top: 1rem;">${code2Title || ''}</h3>
              </div>
            </div>
          </section>
          <section class="satisfaction-section">
            <h2 class="satisfaction-title">FLE pro et numérique</h2>
            <div class="satisfaction-image-container double-image-row">
              <div class="image-title-block">
                <img src="${ASSET_URL}/files/29/download" alt="${fle1Title || ''}" class="satisfaction-image double-image" />
                <h3 class="satisfaction-title" style="font-size: 1.3rem; margin-top: 1rem;">${fle1Title || ''}</h3>
              </div>
              <div class="image-title-block">
                <img src="${ASSET_URL}/files/30/download" alt="${fle2Title || ''}" class="satisfaction-image double-image" />
                <h3 class="satisfaction-title" style="font-size: 1.3rem; margin-top: 1rem;">${fle2Title || ''}</h3>
              </div>
            </div>
          </section>
        `;
      } catch (err) {
        console.error('Erreur lors du chargement des sections satisfaction :', err);
        satisfactionContainer.innerHTML = '<p>Erreur lors du chargement</p>';
      }
    }
  })();

  function initFleStatsAnimations() {
    const fleSection = document.querySelector('.fle-section');
    if (!fleSection) return;
    
    const statsSection = fleSection.querySelector('.stats');
    const statValues = fleSection.querySelectorAll('.stat-value');

    function animateCounter(element, target, duration = 2000) {
      const isPercentage = element.textContent.includes('%');
      let current = 0;
      const startTime = performance.now();

      function updateCounter(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        
        const easedProgress = 1 - Math.pow(1 - progress, 3);
        
        current = Math.round(target * easedProgress);
        element.textContent = isPercentage ? `${current}%` : current;

        if (progress < 1) {
          requestAnimationFrame(updateCounter);
        } else {
          element.textContent = isPercentage ? `${target}%` : target;
        }
      }

      requestAnimationFrame(updateCounter);
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          statValues.forEach((statElement, index) => {
            const target = parseFloat(statElement.getAttribute('data-target'));
            if (!isNaN(target)) {
              setTimeout(() => {
                animateCounter(statElement, target);
              }, index * 200);
            }
          });
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.5
    });

    if (statsSection) {
      observer.observe(statsSection);
    }
  }
</script>

<style>
  .stats-loading,
  .satisfaction-loading {
    text-align: center;
    padding: 2rem;
    color: #666;
  }

  /* === ANIMATIONS ET STYLES POUR IMAGE-WRAPPER === */
  .fle-image {
    transition: transform 0.3s ease-in-out, filter 0.3s ease-in-out;
  }

  .overlay {
    transition: all 0.3s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .overlay h4 {
    transition: transform 0.3s ease-in-out;
    margin: 0;
    text-align: center;
    width: 100%;
  }

  .animate-slide-up {
    opacity: 0;
    transform: translateY(50px);
    animation: slideUpFade 1.2s ease-out 0.5s forwards;
  }

  .animate-slide-right {
    opacity: 0;
    transform: translateX(50px);
    animation: slideRightFade 1s ease-out 1s forwards;
  }

  .animate-fade-in-delayed {
    opacity: 0;
    transform: translateY(20px);
    animation: textFadeIn 0.8s ease-out 1.5s forwards;
  }

  @keyframes slideUpFade {
    from { opacity: 0; transform: translateY(50px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slideRightFade {
    from { opacity: 0; transform: translateX(50px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes textFadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .fle-image:hover {
    transform: scale(1.02);
    filter: brightness(1.1);
  }

  .overlay:hover {
    background: rgba(0, 70, 164, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 70, 164, 0.3);
  }

  .overlay:hover h4 {
    transform: scale(1.05);
  }

  /* === STYLES MODERNES POUR LES STATS FLE === */
  .animate-fade-in {
    opacity: 0;
    animation: fadeInStatsSection 0.8s ease-out 0.3s forwards;
  }

  .stat-block.animate-slide-up {
    opacity: 0;
    transform: translateY(30px);
    animation: slideUpFadeStats 0.6s ease-out forwards;
  }

  .stats {
    padding: 3rem 2rem;
    text-align: center;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-radius: 20px;
    margin: 2rem 0;
    box-shadow: 0 4px 20px rgba(0, 70, 164, 0.1);
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  .stat-block {
    background: white;
    padding: 2rem 1.5rem;
    border-radius: 15px;
    box-shadow: 0 6px 25px rgba(0, 70, 164, 0.15);
    transition: all 0.3s ease;
    min-width: 180px;
    position: relative;
    overflow: hidden;
  }

  .stat-block::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #0046a4, #1a73e8);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .stat-block:hover::before {
    transform: translateX(0);
  }

  .stat-block:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0, 70, 164, 0.25);
  }

  .stat-value {
    display: block;
    font-size: 2.5rem;
    color: #0046a4;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1;
    background: linear-gradient(135deg, #0046a4, #1a73e8);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .stat-label {
    color: #64748b;
    font-size: 0.95rem;
    line-height: 1.4;
    margin: 0;
    font-weight: 500;
  }

  @keyframes fadeInStatsSection {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slideUpFadeStats {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* === SECTION SATISFACTION DES STAGIAIRES === */
  .satisfaction-sections-container {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    margin-top: 3rem;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 70, 164, 0.1);
    overflow: hidden;
  }

  .satisfaction-section {
    padding: 4rem 2rem;
    text-align: center;
    margin: 0;
    border-radius: 0;
    box-shadow: none;
  }

  .satisfaction-section:not(:last-child) {
    border-bottom: 1px solid rgba(0, 70, 164, 0.1);
  }

  .satisfaction-title {
    color: #0046a4;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    background: linear-gradient(135deg, #0046a4, #1a73e8);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .satisfaction-image-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background: white;
    border-radius: 15px;
    box-shadow: 0 6px 25px rgba(0, 70, 164, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .satisfaction-image-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 35px rgba(0, 70, 164, 0.25);
  }

  .satisfaction-image {
    width: 100%;
    height: auto;
    border-radius: 10px;
    margin-bottom: 1rem;
    transition: transform 0.3s ease;
  }

  .satisfaction-image:hover {
    transform: scale(1.02);
  }

  .double-image-row {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .image-title-block {
    flex: 1 1 350px;
    min-width: 250px;
    max-width: 600px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .double-image {
    width: 100%;
    max-width: 100%;
    height: auto;
    object-fit: contain;
    margin-left: auto;
    margin-right: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .animate-slide-up,
    .animate-slide-right,
    .animate-fade-in-delayed {
      animation-duration: 0.8s;
    }

    .fle-image:hover {
      transform: scale(1.01);
    }

    .overlay:hover {
      transform: translateY(-1px);
    }

    .stats {
      padding: 2rem 1rem;
      margin: 1rem;
      border-radius: 15px;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }

    .stat-block {
      min-width: 150px;
      padding: 1.5rem 1rem;
    }

    .stat-value {
      font-size: 2rem;
    }

    .stat-label {
      font-size: 0.9rem;
    }

    .stat-block.animate-slide-up {
      animation-duration: 0.4s;
    }

    .satisfaction-sections-container {
      margin-top: 2rem;
      border-radius: 15px;
    }

    .satisfaction-section {
      padding: 2rem 1rem;
    }

    .satisfaction-title {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    .satisfaction-image-container {
      padding: 1.5rem;
      margin: 0 1rem;
    }

    .double-image-row {
      flex-direction: column;
      gap: 1.5rem;
    }

    .image-title-block {
      max-width: 100%;
      min-width: 0;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-slide-up,
    .animate-slide-right,
    .animate-fade-in-delayed,
    .animate-fade-in,
    .stat-block.animate-slide-up {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .fle-image:hover,
    .overlay:hover,
    .overlay:hover h4,
    .stat-block:hover,
    .satisfaction-image-container:hover,
    .satisfaction-image:hover {
      transform: none;
    }
  }
</style>
