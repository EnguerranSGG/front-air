---
// Les données seront chargées côté client
const API_BASE_URL = import.meta.env.PUBLIC_API_URL || '';
// Note: Les variables doivent être passées via define:vars dans les scripts
---

<section class="hero">
  <div class="hero-container">
    <img src={`${API_BASE_URL}/files/8/download`} alt="Illustration accueil insertion" class="hero-image animate-slide-up" />

    <div class="hero-overlay animate-slide-right">
      <h4 class="animate-fade-in-delayed hero-title" id="hero-title">
        <span class="hero-loading" id="hero-loading">
          <svg class="spinner-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" stroke-dasharray="31.416" stroke-dashoffset="31.416">
              <animate attributeName="stroke-dasharray" dur="2s" values="0 31.416;15.708 15.708;0 31.416" repeatCount="indefinite"/>
              <animate attributeName="stroke-dashoffset" dur="2s" values="0;-15.708;-31.416" repeatCount="indefinite"/>
            </circle>
          </svg>
          <span class="hero-loading-text">Chargement...</span>
        </span>
        <span class="hero-title-text" id="hero-title-text" style="display: none;"></span>
      </h4>
    </div>
  </div>
</section>

<script define:vars={{ API_BASE_URL }}>
  // Système de chargement global pour la page d'accueil
  window.pageLoadPromises = window.pageLoadPromises || [];
  
  // Fonction pour enregistrer une promesse de chargement (accessible globalement)
  window.registerPageLoad = function(promise) {
    window.pageLoadPromises.push(promise);
  };
  
  // Fonction pour masquer le spinner une fois tout chargé
  async function hideHeroSpinner() {
    try {
      // Attendre que toutes les promesses de chargement soient résolues
      await Promise.allSettled(window.pageLoadPromises);
      
      // Petit délai pour une transition fluide
      await new Promise(resolve => setTimeout(resolve, 300));
      
      const loadingElement = document.getElementById('hero-loading');
      const titleTextElement = document.getElementById('hero-title-text');
      
      if (loadingElement && titleTextElement) {
        loadingElement.style.opacity = '0';
        setTimeout(() => {
          loadingElement.style.display = 'none';
          titleTextElement.style.display = 'inline';
          titleTextElement.style.opacity = '0';
          setTimeout(() => {
            titleTextElement.style.opacity = '1';
          }, 50);
        }, 300);
      }
    } catch (err) {
      console.error('Erreur lors du masquage du spinner:', err);
      const loadingElement = document.getElementById('hero-loading');
      const titleTextElement = document.getElementById('hero-title-text');
      if (loadingElement) loadingElement.style.display = 'none';
      if (titleTextElement) titleTextElement.style.display = 'inline';
    }
  }

  // Charger le titre côté client
  (async function() {
    const titleTextElement = document.getElementById('hero-title-text');
    if (!titleTextElement || !API_BASE_URL) {
      if (titleTextElement && !API_BASE_URL) {
        titleTextElement.textContent = '';
        // Masquer le spinner même si l'API n'est pas disponible
        setTimeout(hideHeroSpinner, 500);
      }
      return;
    }

    const apiUrl = `${API_BASE_URL}/files/8/title`;
    
    const titlePromise = (async () => {
      try {
        const response = await fetch(apiUrl);
        if (response.ok) {
          const title = await response.text();
          titleTextElement.textContent = title;
        } else {
          titleTextElement.textContent = '';
        }
      } catch (err) {
        console.error("Erreur fetch lors de la récupération du titre :", err);
        titleTextElement.textContent = '';
      }
    })();
    
    window.registerPageLoad(titlePromise);
    
    // Attendre que toutes les sections soient chargées
    // On attend un peu pour que toutes les sections enregistrent leurs promesses
    setTimeout(async () => {
      // Vérifier périodiquement si toutes les promesses sont résolues
      const checkAllLoaded = setInterval(async () => {
        if (window.pageLoadPromises.length > 0) {
          const allSettled = await Promise.allSettled(window.pageLoadPromises);
          // Vérifier si toutes les promesses sont résolues
          const allResolved = allSettled.every(result => result.status === 'fulfilled' || result.status === 'rejected');
          if (allResolved) {
            clearInterval(checkAllLoaded);
            hideHeroSpinner();
          }
        }
      }, 200);
      
      // Timeout de sécurité : masquer le spinner après 10 secondes max
      setTimeout(() => {
        clearInterval(checkAllLoaded);
        hideHeroSpinner();
      }, 10000);
    }, 1000); // Attendre 1 seconde pour que toutes les sections s'enregistrent
  })();
</script>

<style>
  /* === ANIMATIONS ET STYLES POUR HERO-CONTAINER UNIQUEMENT === */
  
  /* Styles pour l'image avec animations - identique à FLE */
  .hero-image {
    transition: transform 0.3s ease-in-out, filter 0.3s ease-in-out;
  }

  /* Centrage parfait de l'overlay - identique à FLE */
  .hero-overlay {
    transition: all 0.3s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Centrage parfait du titre dans l'overlay - identique à FLE */
  .hero-overlay h4 {
    transition: transform 0.3s ease-in-out;
    margin: 0;
    text-align: center;
    width: 100%;
    min-height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    transition: opacity 0.3s ease;
  }

  .hero-loading-text {
    font-size: 1rem;
    color: white;
  }

  .spinner-icon {
    width: 2rem;
    height: 2rem;
    color: white;
    animation: spin 2s linear infinite;
  }

  .hero-title-text {
    transition: opacity 0.3s ease;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Ajuster les styles mobile pour correspondre exactement à FLE */
  @media (max-width: 768px) {
    .hero-container {
      position: relative;
      width: 100%;
      max-width: 100%;
      margin: 0 auto;
      overflow: hidden;
      border-radius: 1rem;
    }
    
    .hero-image {
      width: 100%;
      height: auto;
      display: block;
      object-fit: cover;
      border-radius: 1rem;
    }
    
    .hero-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: auto;
      top: auto;
      transform: none;
      background: rgba(0, 70, 164, 0.85);
      color: white;
      padding: 1rem;
      text-align: center;
      border-bottom-left-radius: 1rem;
      border-bottom-right-radius: 1rem;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
      min-width: auto;
      max-width: none;
      width: 100%;
    }
    
    .hero-overlay h4 {
      position: initial;
      margin: 0;
      font-size: 1.2rem;
      line-height: 1.4;
    }
  }

  /* === ANIMATIONS === */
  .animate-slide-up {
    opacity: 0;
    transform: translateY(50px);
    animation: slideUpFade 1.2s ease-out 0.5s forwards;
  }

  .animate-slide-right {
    opacity: 0;
    transform: translateX(50px);
    animation: slideRightFade 1s ease-out 1s forwards;
  }

  .animate-fade-in-delayed {
    opacity: 0;
    transform: translateY(20px);
    animation: textFadeIn 0.8s ease-out 1.5s forwards;
  }

  @keyframes slideUpFade {
    from { opacity: 0; transform: translateY(50px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slideRightFade {
    from { opacity: 0; transform: translateX(50px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes textFadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* === EFFETS DE SURVOL === */
  .hero-image:hover {
    transform: scale(1.02);
    filter: brightness(1.1);
  }

  .hero-overlay:hover {
    background: rgba(0, 70, 164, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 70, 164, 0.3);
  }

  .hero-overlay:hover h4 {
    transform: scale(1.05);
  }

  /* === RESPONSIVE MOBILE UNIQUEMENT === */
  @media (max-width: 768px) {
    /* Animations plus rapides sur mobile */
    .animate-slide-up,
    .animate-slide-right,
    .animate-fade-in-delayed {
      animation-duration: 0.8s;
    }
    
    /* Effets de survol adaptés pour mobile */
    .hero-image:hover {
      transform: scale(1.01);
    }
    
    .hero-overlay:hover {
      transform: translateY(-1px);
    }
  }

  /* === ACCESSIBILITÉ === */
  @media (prefers-reduced-motion: reduce) {
    .animate-slide-up,
    .animate-slide-right,
    .animate-fade-in-delayed {
      animation: none;
      opacity: 1;
      transform: none;
    }
    
    .hero-image:hover,
    .hero-overlay:hover,
    .hero-overlay:hover h4 {
      transform: none;
    }
  }
</style>
